name: Continuous Integration

on:
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: beconnected-apex-homework-sst2

    steps:
    - uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '18'
        cache: 'npm'

    - name: Install dependencies
      run: npm install

    - name: Lint Code
      run: npm run lint

    - name: Type Check
      run: npm run typecheck

    - name: Run Tests
      run: npm run test
