name: Continuous Integration

on:
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: beconnected-apex-homework-sst2

    steps:
    - name: Checkout code
      uses: actions/checkout@v2 # Using a pre-built action

    - name: Set up Node.js
      uses: actions/setup-node@v2 # Using a pre-built action
      with:
        node-version: '18'
        cache: 'npm'

    - name: Install dependencies
      run: npm install # Running a command

    - name: Lint Code
      run: npm run lint # Running a command

    - name: Type Check
      run: npm run typecheck # Running a command

    - name: Run Tests
      run: npm run test # Running a command
